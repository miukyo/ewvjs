{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/csharp/**/*",
        "node_modules",
        "dist",
        "test"
    ]
}